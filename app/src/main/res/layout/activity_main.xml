<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLetras"
        android:text="Texto center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="16dp"
        android:textSize="30sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorLetras"
        android:text="Texto left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="16dp"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorLetras"
        android:text="Texto right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:layout_gravity="center|top"
            android:padding="16dp"
            android:textSize="28dp"
            android:background="@color/colorDois"
            android:textColor="@color/colorLetras"
            android:text="texto horizontal" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:layout_weight="50"
            android:padding="16dp"
            android:textSize="28dp"
            android:textColor="@color/colorLetras"
            android:background="@color/colorTres"
            android:text="Texto Horizontal" />


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorLetras"
        android:text="Enviar"
        />


</LinearLayout>